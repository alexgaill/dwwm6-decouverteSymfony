{% extends 'base.html.twig' %}

{% block title %}Hello CategoryController!
{% endblock %}

{% block body %}
	{% for type, messages in app.flashes %}
	<div class="alert-{{type}}">
		{% for message in messages %}
			<p>{{message}}</p>
		{% endfor %}
	</div>
	{% endfor %}

	{% if categoriesList is not empty %}
		<ul>
			{% for categorie in categoriesList %}
				<li>
					<a href={{ path("singleCategorie", {categorie: categorie.id}) }}>{{ categorie.title }}</a>
				</li>
			{% endfor %}
		</ul>
	{% else %}
        <p>Il n'y a pas de cat√©gories pour le moment</p>
	{% endif %}
{% endblock %}
